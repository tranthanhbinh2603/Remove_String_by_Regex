<Window x:Class="Remove_Char_by_Regex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Remove_Char_by_Regex"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>            
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="tbInput" AcceptsReturn="True" TextWrapping="Wrap">Input ở đây</TextBox>
        <Button Grid.Row="1" x:Name="Run" Click="Run_Click">Thực thi</Button>
        <TextBox Grid.Row="2" x:Name="tbOutput" AcceptsReturn="True" TextWrapping="Wrap">Output ở đây</TextBox>
    </Grid>
</Window>
